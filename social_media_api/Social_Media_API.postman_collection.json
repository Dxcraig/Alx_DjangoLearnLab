{
  "info": {
    "name": "Social Media API",
    "_postman_id": "social-media-api-collection",
    "description": "API endpoints for Social Media API - User Authentication and Profile Management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"testpass123\",\n  \"password_confirm\": \"testpass123\",\n  \"bio\": \"Software developer and tech enthusiast\"\n}"
            },
            "url": {
              "raw": "http://127.0.0.1:8000/api/accounts/register/",
              "protocol": "http",
              "host": ["127", "0", "0", "1"],
              "port": "8000",
              "path": ["api", "accounts", "register", ""]
            },
            "description": "Register a new user account. Returns authentication token upon success."
          },
          "response": []
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"testpass123\"\n}"
            },
            "url": {
              "raw": "http://127.0.0.1:8000/api/accounts/login/",
              "protocol": "http",
              "host": ["127", "0", "0", "1"],
              "port": "8000",
              "path": ["api", "accounts", "login", ""]
            },
            "description": "Login with existing credentials. Returns authentication token."
          },
          "response": []
        },
        {
          "name": "Logout User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{auth_token}}"
              }
            ],
            "url": {
              "raw": "http://127.0.0.1:8000/api/accounts/logout/",
              "protocol": "http",
              "host": ["127", "0", "0", "1"],
              "port": "8000",
              "path": ["api", "accounts", "logout", ""]
            },
            "description": "Logout the authenticated user. Deletes the authentication token."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Profile",
      "item": [
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{auth_token}}"
              }
            ],
            "url": {
              "raw": "http://127.0.0.1:8000/api/accounts/profile/",
              "protocol": "http",
              "host": ["127", "0", "0", "1"],
              "port": "8000",
              "path": ["api", "accounts", "profile", ""]
            },
            "description": "Get the authenticated user's profile information."
          },
          "response": []
        },
        {
          "name": "Update User Profile (JSON)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bio\": \"Updated bio - Full-stack developer and tech enthusiast\"\n}"
            },
            "url": {
              "raw": "http://127.0.0.1:8000/api/accounts/profile/",
              "protocol": "http",
              "host": ["127", "0", "0", "1"],
              "port": "8000",
              "path": ["api", "accounts", "profile", ""]
            },
            "description": "Update user profile bio using JSON format."
          },
          "response": []
        },
        {
          "name": "Update Profile Picture",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{auth_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "profile_picture",
                  "type": "file",
                  "src": "",
                  "description": "Upload a profile picture"
                },
                {
                  "key": "bio",
                  "value": "Updated bio with new picture",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "http://127.0.0.1:8000/api/accounts/profile/",
              "protocol": "http",
              "host": ["127", "0", "0", "1"],
              "port": "8000",
              "path": ["api", "accounts", "profile", ""]
            },
            "description": "Update user profile picture using form-data."
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "auth_token",
      "value": "your-token-here",
      "type": "string"
    }
  ]
}
